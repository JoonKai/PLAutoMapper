<Window x:Class="PLAutoMapper.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLAutoMapper" xmlns:views="clr-namespace:PLAutoMapper.Views" xmlns:layoutcontrol="clr-namespace:PLAutoMapper.Views.LayoutControl"
        mc:Ignorable="d"
        Title="SettingWindow" Height="550" Width="900" WindowStyle="None" ResizeMode="NoResize">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="20" ResizeBorderThickness="2"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="0.8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.8"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <layoutcontrol:TitleBar Grid.Row="0" Title="옵션" Background="{StaticResource ColorDarkGray}"/>
        <Grid Grid.Row="1" Background="{StaticResource ColorOrange}"/>
        <views:SettingScreen Grid.Row="2"/>
        <Grid Grid.Row="3" Background="{StaticResource ColorOrange}"/>
        <layoutcontrol:StatusBar Grid.Row="4" Background="{StaticResource ColorDarkGray}"/>
    </Grid>
</Window>
